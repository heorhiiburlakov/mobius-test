<div class="row">
  <div class="col-md-6">
    <h4>Payments</h4>
    <table class="table">
      <thead>
      <tr>
        <th>From user</th>
        <th>Credits</th>
        <th>Date</th>
      </tr>
      </thead>

      <tbody>
      <% @payments.each do |transaction| %>
        <tr>
          <td><%= transaction.to_user.email %></td>
          <td><%= transaction.num_credits %></td>
          <td><%= transaction.created_at %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-md-6">
    <h4>Incomes</h4>
    <table class="table">
      <thead>
      <tr>
        <th>From user</th>
        <th>Credits</th>
      </tr>
      </thead>

      <tbody>
      <% @incomes.each do |transaction| %>
        <tr>
          <td><%= transaction.from_user.email %></td>
          <td><%= transaction.num_credits %></td>
          <td><%= transaction.created_at %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
