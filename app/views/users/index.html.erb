<% cache @users do %>
  <p id="notice"><%= notice %></p>

  <h1>Users</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Email</th>
        <th>Send credits to user</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= render_payment_form(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
<% end %>
